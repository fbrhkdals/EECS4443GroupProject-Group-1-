<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="BlaBla"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EECS4443GroupProjectGroup1">
        <activity
            android:name=".Activity.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activity.MainActivity" android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" android:exported="false"/>

        <activity android:name=".Activity.HomeActivity" android:screenOrientation="portrait"
            android:exported="false" />

        <activity android:name=".Activity.SignupActivity" android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" android:exported="false" />

        <activity android:name=".Activity.ProfileActivity" android:screenOrientation="portrait"
            android:exported="false" />

        <activity android:name=".Activity.SearchFriendsActivity" android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" android:exported="false" />

        <activity android:name=".ChatActivity" android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" android:exported="false" />

        <activity android:name=".CreateChatActivity" android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" android:exported="false" />

    </application>

</manifest>